@model ListaTracker.Models.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="CreateOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="mb-2">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="Type" value="@ListaTracker.Constants.CategoryTypeConstants.Expense" checked="@(Model.Type.Equals(ListaTracker.Constants.CategoryTypeConstants.Expense))" />
                        <label class="e-btn" for="radioleft">Expense</label>
                        <input type="radio" id="radiomiddle" name="Type" value="@ListaTracker.Constants.CategoryTypeConstants.Income" checked="@(Model.Type.Equals(ListaTracker.Constants.CategoryTypeConstants.Income))" />
                        <label class="e-btn" for="radiomiddle">Income</label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <ejs-textbox id="Title" placeholder="Title" ejs-for="Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <ejs-textbox id="Icon" placeholder="Icon" ejs-for="Icon" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <ejs-button id="Submit" cssClass="e-primary" type="submit" content="Submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 align-items-center justify-content-center d-flex" style="background-color: #212B36;">
            <i class="fa-solid fa-layer-group fa-2xl"></i>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
